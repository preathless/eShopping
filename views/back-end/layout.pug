html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='apple-touch-icon', sizes='76x76', href='/themes/back-end/assets/img/apple-icon.png')
    link(rel='icon', type='image/png', sizes='96x96', href='/themes/back-end/assets/img/favicon.png')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
