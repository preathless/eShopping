doctype html
html(lang='en')
  
  //- Include Header
  include ../system/header.pug

  body
    //- ==============================================================
    //- Preloader - style you can find in spinners.css
    //- ==============================================================
    .preloader
      svg.circular(viewbox='25 25 50 50')
        circle.path(cx='50', cy='50', r='20', fill='none', stroke-width='2', stroke-miterlimit='10')
    //- ==============================================================
    //- Main wrapper - style you can find in pages.scss
    //- ==============================================================
    section#wrapper.login-register.login-sidebar(style='background-image:url(themes/backend/assets/images/background/login-register.jpg);')
      .login-box.card
        .card-block
          form#loginform.form-horizontal.form-material(action='index.html')
            a.text-center.db(href='javascript:void(0)')
              img(src='themes/backend/assets/images/logo-icon.png', alt='Home')
              br
              img(src='themes/backend/assets/images/logo-text.png', alt='Home')
            h3.box-title.m-t-40.m-b-0 Register Now
            small Create your account and enjoy
            .form-group.m-t-20
              .col-xs-12
                input.form-control(type='text', required='', placeholder='Name')
            .form-group
              .col-xs-12
                input.form-control(type='text', required='', placeholder='Email')
            .form-group
              .col-xs-12
                input.form-control(type='password', required='', placeholder='Password')
            .form-group
              .col-xs-12
                input.form-control(type='password', required='', placeholder='Confirm Password')
            .form-group
              .col-md-12
                .checkbox.checkbox-primary.p-t-0
                  input#checkbox-signup(type='checkbox')
                  label(for='checkbox-signup')
                    | I agree to all 
                    a(href='pages-register2.html#') Terms
            .form-group.text-center.m-t-20
              .col-xs-12
                button.btn.btn-info.btn-lg.btn-block.text-uppercase.waves-effect.waves-light(type='submit') Sign Up
            .form-group.m-b-0
              .col-sm-12.text-center
                p
                  | Already have an account? 
                  a.text-info.m-l-5(href='https://wrappixel.com/demos/admin-templates/monster-admin/horizontal/login2.html')
                    b Sign In

    //- Include Footer
    include ../system/footer.pug
