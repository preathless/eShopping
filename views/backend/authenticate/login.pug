doctype html
html(lang='en')
  
  //- Include Header
  include ../system/header.pug

  body
    //- ==============================================================
    //- Preloader - style you can find in spinners.css
    //- ==============================================================
    .preloader
      svg.circular(viewbox='25 25 50 50')
        circle.path(cx='50', cy='50', r='20', fill='none', stroke-width='2', stroke-miterlimit='10')
    //- ==============================================================
    //- Main wrapper - style you can find in pages.scss
    //- ==============================================================
    section#wrapper.login-register.login-sidebar(style='background-image:url(themes/backend/assets/images/background/login-register.jpg);')
      .login-box.card
        .card-block
          form#loginform.form-horizontal.form-material(method="post" action='/signin')
            a.text-center.db(href='javascript:void(0)')
              img(src='themes/backend/assets/images/logo-icon.png', alt='Home')
              br
              img(src='themes/backend/assets/images/logo-text.png', alt='Home')
            .form-group.m-t-40
              .col-xs-12
                input.form-control(type='text', name="email" required='', placeholder='Email')
            .form-group
              .col-xs-12
                input.form-control(type='password', name="password" required='', placeholder='Password')
            .form-group
              .col-md-12
                .checkbox.checkbox-primary.pull-left.p-t-0
                  input#checkbox-signup(type='checkbox')
                  label(for='checkbox-signup')  Remember me 
                a#to-recover.text-dark.pull-right(href='javascript:void(0)')
                  i.fa.fa-lock.m-r-5
                  |  Forgot Password ?
            .form-group.text-center.m-t-20
              .col-xs-12
                button.btn.btn-info.btn-lg.btn-block.text-uppercase.waves-effect.waves-light(typse='submit') Sign In
            .row
              .col-xs-12.col-sm-12.col-md-12.m-t-10.text-center
                .social
                  a.btn.btn-facebook(href='/auth/facebook', data-toggle='tooltip', title='Login with Facebook')
                    i.fa.fa-facebook(aria-hidden='true')
                  label
                  //- a.btn.btn-googleplus(href='', data-toggle='tooltip', title='Login with Google')
                  //-   i.fa.fa-google-plus(aria-hidden='true')
            .form-group.m-b-0
              .col-sm-12.text-center
                p
                  | Don't have an account ? 
                  a.text-primary.m-l-5(href='/register')
                    b Sign Up
          form#recoverform.form-horizontal(action='index.html')
            .form-group
              .col-xs-12
                h3 Recover Password
                p.text-muted Enter your Email and instructions will be sent to you! 
            .form-group
              .col-xs-12
                input.form-control(type='text', required='', placeholder='Email')
            .form-group.text-center.m-t-20
              .col-xs-12
                button.btn.btn-primary.btn-lg.btn-block.text-uppercase.waves-effect.waves-light(type='submit') Reset
    
    //- Include Footer
    include ../system/footer.pug