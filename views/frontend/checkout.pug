extends layout
block content
  section#cart_items
    .container
      .breadcrumbs
        ol.breadcrumb
          li
            a(href='#') Home
          li.active Check out
      //- /breadcrums
      .step-one
        h2.heading Step1
      .checkout-options
        h3 New User
        p Checkout options
        ul.nav
          li
            label
              input(type='checkbox')
              |  Register Account
          li
            label
              input(type='checkbox')
              |  Guest Checkout
          li
            a(href='')
              i.fa.fa-times
              | Cancel
      //- /checkout-options
      .register-req
        p
          | Please use Register And Checkout to easily get access to your order history, or use Checkout as Guest
      //- /register-req
      .shopper-informations
        .row
          .col-sm-3
            .shopper-info
              p Shopper Information
              form
                input(type='text', placeholder='Display Name')
                input(type='text', placeholder='User Name')
                input(type='password', placeholder='Password')
                input(type='password', placeholder='Confirm password')
              a.btn.btn-primary(href='') Get Quotes
              a.btn.btn-primary(href='') Continue
          .col-sm-5.clearfix
            .bill-to
              p Bill To
              .form-one
                form
                  input(type='text', placeholder='Company Name')
                  input(type='text', placeholder='Email*')
                  input(type='text', placeholder='Title')
                  input(type='text', placeholder='First Name *')
                  input(type='text', placeholder='Middle Name')
                  input(type='text', placeholder='Last Name *')
                  input(type='text', placeholder='Address 1 *')
                  input(type='text', placeholder='Address 2')
              .form-two
                form
                  input(type='text', placeholder='Zip / Postal Code *')
                  select
                    option -- Country --
                    option United States
                    option Bangladesh
                    option UK
                    option India
                    option Pakistan
                    option Ucrane
                    option Canada
                    option Dubai
                  select
                    option -- State / Province / Region --
                    option United States
                    option Bangladesh
                    option UK
                    option India
                    option Pakistan
                    option Ucrane
                    option Canada
                    option Dubai
                  input(type='password', placeholder='Confirm password')
                  input(type='text', placeholder='Phone *')
                  input(type='text', placeholder='Mobile Phone')
                  input(type='text', placeholder='Fax')
          .col-sm-4
            .order-message
              p Shipping Order
              textarea(name='message', placeholder='Notes about your order, Special Notes for Delivery', rows='16')
              label
                input(type='checkbox')
                |  Shipping to bill address
      .review-payment
        h2 Review & Payment
